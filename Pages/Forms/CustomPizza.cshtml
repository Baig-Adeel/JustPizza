@page
@model JustPizza.Pages.Forms.CustomPizzaModel
@{
}
<div class="card-header">
    <div class="text-center container">
        <h1>Create Your Own Pizza</h1>        
    </div>
</div>
<div class="card-body align-content-center">
    <form method="post">
        
        <div class="bg-light mx-auto pt-5 pb-5 px-5 col-4">
            <label>Pizza Name:</label>
            <input type="text" placeholder="Give Your Pizza a name" asp-for="pizza.Name" /><br/>
            <input type="checkbox" asp-for="pizza.Peperoni" placeholder="Peperoni" />Peperoni<br/>
            <input type="checkbox" asp-for="pizza.Cheese" placeholder="Cheese" />Cheese<br />
            <input type="checkbox" asp-for="pizza.Mushrooms" placeholder="Mushroom" />Mushroom<br />
            <input type="checkbox" asp-for="pizza.Peppers" placeholder="Peppers" />Peppers<br />
            <input type="checkbox" asp-for="pizza.Pineapple" placeholder="Pineapple" />Pineapple<br/>
            <input type="checkbox" asp-for="pizza.Tuna" placeholder="Tuna" />Tuna<br />
            <input type="checkbox" asp-for="pizza.Ham" placeholder="Ham" />Ham<br />
            <button class="btn btn-primary" type="submit" margin="5px">Order My Pizza</button>

        </div> 
    </form>
</div>
<div class="card-footer">

</div>
