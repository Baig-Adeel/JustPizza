@page
@model JustPizza.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="maintext">
        <h1 class="display-4 text-capitalize" >Our Great Selection of pizzas</h1>
        <h4>Choose one or Try our pizza builder!</h4>
        <p class="smallText">One pizza per order</p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/Images/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left">Create Your Own Pizza</h3>
                            <p style="text-align:left">Make your own pizza with our pizza maker!</p>
                            <a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try Now</a>

                        </div>
                    </div> 
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDB)
            {
                <div class="col-4 mb-5" >
                    
                    <a class="pizza-img"  asp-area="" asp-page="Checkouts/Checkout"
                    asp-route-ImageTitle="@pizza.ImageURL"
                    asp-route-Name="@pizza.Name"
                   asp-route-PizzaPrice="@pizza.FinalPrice"><img src="@pizza.ImageURL" class="w-100" asp-append-version="true" /></a>
                <br/>
                </div>
            }
        </div>
    </div>
</div>
    
